{
  "name": "css-size-scale",
  "description": "Generate a set of CSS size values based on a scale",
  "version": "0.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Tom Scott <tubbo@psychedeli.ca>",
  "license": "MIT",
  "packageManager": "yarn@3.2.0",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "check": "prettier --check .",
    "lint": "eslint .",
    "types": "tsc --noEmit",
    "test": "jest",
    "build": "tsc",
    "fmt": "prettier --write . && eslint --fix .",
    "release": "semantic-release",
    "clean": "rm -rf dist",
    "docs": "typedoc src/index.ts"
  },
  "eslintConfig": {
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:jest/recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "*.(j|t)sx?": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,yaml,yml,html,htm,css}": [
      "prettier --write"
    ]
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "master",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "tarballDir": "pkg"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs",
            "CHANGELOG.md",
            "package.json"
          ]
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            "pkg/*.tgz"
          ]
        }
      ]
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@commitlint/types": "^16.2.1",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@swc/core": "^1.2.174",
    "@swc/jest": "^0.2.20",
    "@types/eslint": "^8",
    "@types/lodash": "^4",
    "@types/prettier": "^2",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.1.5",
    "husky": "^7.0.4",
    "jest": "^28.0.3",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "semantic-release": "^19.0.2",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tubbo/css-size-scale.git"
  },
  "bugs": {
    "url": "https://github.com/tubbo/css-size-scale/issues"
  },
  "homepage": "https://tubbo.github.io/css-size-scale",
  "keywords": [
    "css",
    "css-in-js"
  ]
}
